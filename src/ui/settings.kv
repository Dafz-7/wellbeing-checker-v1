<SettingsScreen>:
    BoxLayout:
        orientation: "vertical"

        # Top bar (stacked left | CENTER timer | right refresh)
        BoxLayout:
            size_hint_y: None
            height: "124dp"   # taller to fit 3 stacked buttons
            padding: 10
            spacing: 10

            # Left: stacked Back buttons
            BoxLayout:
                orientation: "vertical"
                size_hint_x: None
                width: "160dp"
                spacing: 6

                Button:
                    text: "< Back to Welcome"
                    size_hint_y: None
                    height: "30dp"
                    font_size: "14sp"
                    on_release: root.back_to_welcome()

                Button:
                    text: "< Back to Diary"
                    size_hint_y: None
                    height: "30dp"
                    font_size: "14sp"
                    on_release: root.back_to_diary()

                Button:
                    text: "< Back to Summary"
                    size_hint_y: None
                    height: "30dp"
                    font_size: "14sp"
                    on_release: root.back_to_summary()

            # Center: countdown timer
            Label:
                text: app.remaining_time_str
                font_size: "14sp"
                bold: True
                halign: "center"
                valign: "middle"
                text_size: self.size

            # Right: Refresh button
            Button:
                text: "Refresh"
                size_hint_x: None
                width: "160dp"
                on_release: root.refresh_page()

        # Main content
        BoxLayout:
            orientation: "vertical"
            padding: 20
            spacing: 20

            Label:
                text: "Settings"
                font_size: "22sp"

            BoxLayout:
                size_hint_y: None
                height: "40dp"
                spacing: 10
                Label:
                    text: "Session Timer (seconds):"
                TextInput:
                    id: timer_input
                    hint_text: "Enter 20 - 1800"
                    multiline: False
                    size_hint_x: None
                    width: "120dp"
                Button:
                    text: "Apply"
                    on_release: root.set_timer(timer_input.text)
