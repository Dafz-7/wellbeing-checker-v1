<WelcomeScreen>:
    BoxLayout:
        orientation: "vertical"

        # Top bar (TRUE centered timer)
        BoxLayout:
            size_hint_y: None
            height: "64dp"
            padding: 10
            spacing: 10

            # Left spacer (matches refresh width)
            Widget:
                size_hint_x: None
                width: "100dp"

            # Center countdown (now truly centered)
            Label:
                text: app.remaining_time_str
                font_size: "16sp"
                bold: True
                halign: "center"
                valign: "middle"
                text_size: self.size

            # Right refresh button
            Button:
                text: "Refresh"
                size_hint_x: None
                width: "100dp"
                on_release: root.refresh_page()

        # Main content
        BoxLayout:
            orientation: "vertical"
            padding: 20
            spacing: 20

            Label:
                text: root.greeting
                font_size: "24sp"
                halign: "center"
                valign: "middle"
                text_size: self.size

            Label:
                text: root.message
                font_size: "20sp"
                halign: "center"
                valign: "middle"
                text_size: self.size

            Widget:

            BoxLayout:
                size_hint_y: None
                height: "40dp"
                spacing: 10
                Button:
                    text: "Log in"
                    on_release: root.go_to_login()
                Button:
                    text: "Sign up"
                    on_release: root.go_to_signup()
