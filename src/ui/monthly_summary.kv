<MonthlySummaryScreen>:
    BoxLayout:
        orientation: "vertical"
        padding: 20
        spacing: 10

        Label:
            text: "Available Monthly Summaries"
            font_size: "22sp"
            size_hint_y: None
            height: "40dp"

        ScrollView:
            size_hint_y: 1
            BoxLayout:
                id: month_list
                orientation: "vertical"
                size_hint_y: None
                height: self.minimum_height
                spacing: 10
