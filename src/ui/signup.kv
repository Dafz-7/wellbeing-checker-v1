<SignupScreen>:
    BoxLayout:
        orientation: "vertical"

        # Top bar
        BoxLayout:
            size_hint_y: None
            height: "40dp"
            padding: 10
            spacing: 10
            Button:
                text: "< Back to Welcome"
                size_hint_x: None
                width: "150dp"
                on_release: root.back_to_welcome()
            Widget:
            Button:
                text: "Settings"
                size_hint_x: None
                width: "120dp"
                on_release: root.go_to_settings()
            Button:
                text: "Refresh"
                size_hint_x: None
                width: "120dp"
                on_release: root.refresh_page()

        # Main content
        BoxLayout:
            orientation: "vertical"
            padding: 20
            spacing: 20

            Label:
                text: "Sign Up"
                font_size: "22sp"

            TextInput:
                id: username
                hint_text: "Choose a username"
                size_hint_y: None
                height: "40dp"

            TextInput:
                id: password
                hint_text: "Choose a password"
                password: True
                size_hint_y: None
                height: "40dp"

            TextInput:
                id: confirm
                hint_text: "Confirm password"
                password: True
                size_hint_y: None
                height: "40dp"

            Button:
                text: "Create Account"
                size_hint_y: None
                height: "40dp"
                on_release: root.create_account()
