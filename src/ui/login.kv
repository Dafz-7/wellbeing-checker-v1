<LoginScreen>:
    BoxLayout:
        orientation: "vertical"

        # Top bar (Back | CENTER timer | Refresh)
        BoxLayout:
            size_hint_y: None
            height: "64dp"
            padding: 10
            spacing: 10

            # Left: Back button
            Button:
                text: "< Back to Welcome"
                size_hint_x: None
                width: "160dp"
                on_release: root.back_to_welcome()

            # Center: countdown timer (TRUE center)
            Label:
                text: app.remaining_time_str
                font_size: "14sp"
                bold: True
                halign: "center"
                valign: "middle"
                text_size: self.size

            # Right: Refresh button (same width as Back)
            Button:
                text: "Refresh"
                size_hint_x: None
                width: "160dp"
                on_release: root.refresh_page()

        # Main content
        BoxLayout:
            orientation: "vertical"
            padding: 20
            spacing: 20

            Label:
                text: "Login"
                font_size: "22sp"

            TextInput:
                id: username
                hint_text: "Username"
                size_hint_y: None
                height: "40dp"

            TextInput:
                id: password
                hint_text: "Password"
                password: True
                size_hint_y: None
                height: "40dp"

            BoxLayout:
                size_hint_y: None
                height: "40dp"
                spacing: 10
                Button:
                    text: "Log in"
                    on_release: root.login()
                Button:
                    text: "Sign up"
                    on_release: root.signup()
