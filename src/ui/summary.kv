<SummaryScreen>:
    BoxLayout:
        orientation: "vertical"

        # Top bar
        BoxLayout:
            size_hint_y: None
            height: "104dp"
            padding: 10
            spacing: 10

            # Left: stacked Back to Welcome + Back to Diary
            BoxLayout:
                orientation: "vertical"
                size_hint_x: None
                width: "160dp"
                spacing: 6

                Button:
                    text: "< Back to Welcome"
                    size_hint_y: None
                    height: "40dp"
                    font_size: "14sp"
                    on_release: root.back_to_welcome()

                Button:
                    text: "< Back to Diary"
                    size_hint_y: None
                    height: "40dp"
                    font_size: "14sp"
                    on_release: root.back_to_diary()

            Widget:
                size_hint_x: None
                width: "40dp"

            # Center: countdown timer
            Label:
                text: app.remaining_time_str
                font_size: "14sp"
                bold: True
                halign: "center"
                valign: "middle"
                text_size: self.size

            # Right: Settings + Refresh
            BoxLayout:
                spacing: 10
                size_hint_x: None
                width: "210dp"

                Button:
                    text: "Settings"
                    size_hint_x: None
                    width: "100dp"
                    on_release: root.go_to_settings()

                Button:
                    text: "Refresh"
                    size_hint_x: None
                    width: "100dp"
                    on_release: root.refresh_page()

        # Main content
        BoxLayout:
            orientation: "vertical"
            padding: 20
            spacing: 20

            Label:
                text: "Summary"
                font_size: "22sp"

            Button:
                text: "Show Monthly Summary"
                size_hint_y: None
                height: "40dp"
                on_release: root.show_summary()
