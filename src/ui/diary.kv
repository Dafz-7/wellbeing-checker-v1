<DiaryScreen>:
    BoxLayout:
        orientation: "vertical"

        # ---------------- Top bar (navigation + timer + actions) ----------------
        BoxLayout:
            size_hint_y: None
            height: "104dp"
            padding: 10
            spacing: 10

            # Left: Back button (navigates to Welcome screen)
            Button:
                text: "< Back to Welcome"
                size_hint_x: None
                width: "160dp"
                on_release: root.back_to_welcome()

            # Spacer to balance layout
            Widget:
                size_hint_x: None
                width: "40dp"

            # Center: countdown timer (bound to app.remaining_time_str)
            Label:
                text: app.remaining_time_str
                font_size: "14sp"
                bold: True
                halign: "center"
                valign: "middle"
                text_size: self.size

            # Right: stacked actions (Settings, Refresh, Go to Summary)
            BoxLayout:
                orientation: "vertical"
                size_hint_x: None
                width: "210dp"
                spacing: 6

                # Top row: Settings + Refresh buttons
                BoxLayout:
                    spacing: 10
                    size_hint_y: None
                    height: "40dp"

                    # Navigate to Settings screen
                    Button:
                        text: "Settings"
                        size_hint_x: None
                        width: "100dp"
                        on_release: root.go_to_settings()

                    # Refresh diary page (clears entry, resets state)
                    Button:
                        text: "Refresh"
                        size_hint_x: None
                        width: "100dp"
                        on_release: root.refresh_page()

                # Bottom row: Navigate to Summary screen
                Button:
                    text: "Go to Summary >"
                    size_hint_y: None
                    height: "40dp"
                    on_release: root.go_to_summary()

        # ---------------- Main content (Diary entry area) ----------------
        BoxLayout:
            orientation: "vertical"
            padding: 20
            spacing: 20

            # Title label
            Label:
                text: "Diary"
                font_size: "22sp"

            # Show current system date/time (bound to root.current_datetime)
            Label:
                text: root.current_datetime
                font_size: "16sp"
                size_hint_y: None
                height: "30dp"

            # Text input for diary entry
            TextInput:
                id: entry
                hint_text: "Write your thoughts here... (Add details about your day... This will help the AI analyse your mood better!)"
                multiline: True
                size_hint_y: 0.7

            # Save entry button (calls root.save_entry())
            Button:
                text: "Save Entry"
                size_hint_y: None
                height: "40dp"
                on_release: root.save_entry()