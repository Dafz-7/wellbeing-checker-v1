<DiaryScreen>:
    BoxLayout:
        orientation: "vertical"

        # Top bar (FIXED â€“ no overflow)
        BoxLayout:
            size_hint_y: None
            height: "104dp"
            padding: 10
            spacing: 10

            # Left: Back button
            Button:
                text: "< Back to Welcome"
                size_hint_x: None
                width: "160dp"
                on_release: root.back_to_welcome()

            Widget:
                size_hint_x: None
                width: "40dp"

            # Center: countdown timer
            Label:
                text: app.remaining_time_str
                font_size: "14sp"
                bold: True
                halign: "center"
                valign: "middle"
                text_size: self.size

            # Right: stacked actions
            BoxLayout:
                orientation: "vertical"
                size_hint_x: None
                width: "210dp"
                spacing: 6

                BoxLayout:
                    spacing: 10
                    size_hint_y: None
                    height: "40dp"

                    Button:
                        text: "Settings"
                        size_hint_x: None
                        width: "100dp"
                        on_release: root.go_to_settings()

                    Button:
                        text: "Refresh"
                        size_hint_x: None
                        width: "100dp"
                        on_release: root.refresh_page()

                Button:
                    text: "Go to Summary >"
                    size_hint_y: None
                    height: "40dp"
                    on_release: root.go_to_summary()

        # Main content
        BoxLayout:
            orientation: "vertical"
            padding: 20
            spacing: 20

            Label:
                text: "Diary"
                font_size: "22sp"

            # Show current system date/time
            Label:
                text: root.current_datetime
                font_size: "16sp"
                size_hint_y: None
                height: "30dp"

            TextInput:
                id: entry
                hint_text: "Write your thoughts here... (Add details about your day... This will help the AI analyse your mood better!)"
                multiline: True
                size_hint_y: 0.7

            Button:
                text: "Save Entry"
                size_hint_y: None
                height: "40dp"
                on_release: root.save_entry()
